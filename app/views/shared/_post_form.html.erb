<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
     <%= f.text_area :title, placeholder: "Compose title..." %>
    <%= f.text_area :context, placeholder: "Compose new Post..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>